<% layout('layouts/boilerplate') %>
<h1>My Campgrounds List:</h1>
<!-- <a href="/">|Home|</a> -->
<!-- <a href="/campgrounds/new">|Add Campgrounds|</a> -->
    <% for (let campground of campgrounds){%>
    <!-- <li><a href="/campgrounds/<%= campground._id %>"> -->
<div class="card" mb-3>
    <div class="row">
        <div class="col-md-4">
            <img class="img-fluid" alt="" src="<%= campground.image %>">
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title"><%= campground.title %></h5>
                <p class="card-text"><%= campground.description %></p>
                <p>
                <small class="text-muted"><%=campground.location %></small>
                </p>
                <a href="/campgrounds/<%=campground.id  %> "class="btn btn-primary">View <%= campground.title %> </a>
            </div>
        </div>
    </div>
</div>
<% } %>