<% layout('layouts/boilerplate') %>
<div class="row">
    <h1 class="text-center">Edit Campground</h1>
    <div class="col-6 offset-3">
        <form action="/campgrounds/<%= campgrounds._id%>?_method=PUT" method="POST">
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" id="title" name=campground[title]
                    value="<%= campgrounds.title%>" required>
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Location</label>
                <input class="form-control" type="text" id="location" name=campground[location]
                    value="<%= campgrounds.location%>" required>
            </div>
            <div class="mb-3">
                <label class="form-label" for="image">Image URL</label>
                <input class="form-control" type="text" id="image" name=campground[image]
                    value="<%= campgrounds.image%>" required>
            </div>
            <div class="mb-3">
                <label class="form-label" for="price">Campground Price</label>
                <div class="input-group">
                    <span class="input-group-text" id="price-label">$</span>
                    <input required type="text" class="form-control" id="price" placeholder="0.00" aria-label="price"
                    aria-describedby="price-label" name=campground[price] 
                    value="<%= campgrounds.price%>" required>
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" type="text" name="campground[description]" id="description" cols="10"
                    rows="5" required><%= campgrounds.description %> </textarea>
            </div>
            <button class="btn btn-success">Update Campground</button>
            <a class="btn btn-link" href="/campgrounds/">All Campgrounds</a>
        </form>
    </div>
</div>
<br>